{
  "version": 2,
  "builds": [
    {
      "src": "Rail-main/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/main.py" },
    { "src": "/(.*)", "dest": "Rail-main/dist/index.html" }
  ],
  "outputDirectory": "Rail-main/dist",
  "env": {
    "VITE_API_BASE_URL": "/api"
  }
}
